<h1><%= @course.name %>: Enrollments</h1>
<%= link_to "Add enrollment", new_course_enrollment_path(@course)%>
<hr />
<h2>teachers</h2>
<ul>
  <% @teachers.each do |teacher|%>
    <li>
      <%= teacher.user.full_name %>
      <br />
      <%= link_to "remove", course_enrollment_path(@course, teacher), method: :delete %>
    </li>
  <% end %>
</ul>
<h2>students</h2>
<ul>
  <% @students.each do |student|%>
    <li>
      <%= student.user.full_name %>
      <br />
      <%= link_to "remove", course_enrollment_path(@course, student), method: :delete %>
    </li>
  <% end %>
</ul>
<h2>tas</h2>
<ul>
  <% @tas.each do |ta|%>
    <li>
      <%= ta.user.full_name %>
      <br />
      <%= link_to 'remove', course_enrollment_path(@course, ta), method: :delete%>
    </li>
  <% end %>
</ul>
